<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.zhitomyr.MainActivity"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:gravity="bottom"
        android:padding="45sp"
        android:textSize="45sp"
        android:textColor="@android:color/white"
        android:layout_weight="0.60"
        android:background="@drawable/sights"/>

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
        <TextView
            android:id="@+id/sights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="@string/sights"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            />
   </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black">

        <TextView
            android:id="@+id/food_and_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="@string/food_drinks"
            android:textColor="@android:color/black"
            android:textSize="28sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:id="@+id/accommodation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="@string/accommodation"
        android:textColor="@android:color/black"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    />
</FrameLayout>

</LinearLayout>

</RelativeLayout>